        "cs": "RB transaction report"
    },
    "description": {
        "en": "Raiffeisenbank transaction report",
        "cs": "Raiffeisenbank transakce report"
    },
    "tags": [
        "Bank",
        "RaiffeisenBank",
        "Transactions",
        "Check",
        "Json",
        "Report"
    ],
    "homepage": "https://github.com/Spoje-NET/raiffeisenbank-statement-tools",
    "executable": "raiffeisenbank-transaction-report",
    "environment": {
        "ACCOUNT_NUMBER": {
            "type": "text",
            "description": {
                "en": "Bank Account Number",
                "cs": "Bank Account Number"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "CERT_PASS": {
            "type": "password",
            "description": {
                "en": "Certificate password",
                "cs": "Certificate password"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "CERT_FILE": {
            "type": "file-path",
            "description": {
                "en": "Path to RB Certificate file",
                "cs": "Path to RB Certificate file"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "REPORT_SCOPE": {
            "type": "text",
            "description": {
                "en": "Time scope of transactions downloaded",
                "cs": "Time scope of transactions downloaded"
            },
            "defval": "last_month",
            "required": false,
            "category": "Other"
        },
        "STATEMENT_LINE": {
            "type": "set",
            "description": {
                "en": "Bank Statement line",
                "cs": "Bank Statement line"
            },
            "defval": "ADDITIONAL",
            "hint": {
                "en": "MAIN",
                "cs": "MAIN"
            },
            "options": {
                "MAIN": "Main statement line",
                "ADDITIONAL": "Additional statement line"
            },
            "category": "Other"
        },
        "ACCOUNT_CURRENCY": {
            "type": "text",
            "description": {
                "en": "for multicurrency accounts please specify one",
                "cs": "for multicurrency accounts please specify one"
            },
            "defval": "CZK",
            "required": false,
            "category": "Other"
        },
        "XIBMCLIENTID": {
            "type": "text",
            "description": {
                "en": "ClientID",
                "cs": "ClientID"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "RESULT_FILE": {
            "type": "string",
            "description": {
                "en": "write output json data to",
                "cs": "write output json data to"
            },
            "defval": "transaction_report_{ACCOUNT_NUMBER}.json",
            "required": false,
            "category": "Other"
        },
        "ZABBIX_KEY": {
            "type": "string",
            "description": {
                "en": "Default name for Zabbix Item key name",
                "cs": "Default name for Zabbix Item key name"
            },
            "defval": "Raiff-Balance-{ACCOUNT_NUMBER}",
            "required": false,
            "category": "Other"
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": {
                "en": "Show debug messages",
                "cs": "Show debug messages"
            },
            "defval": "False",
            "required": true,
            "category": "Behavior"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "write log messages using"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        }
    }
